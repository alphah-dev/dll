{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                ".",
                "-B",
                "build",
                "-G",
                "Visual Studio 17 2022"
            ],
            "problemMatcher": []
        },
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--config",
                "Debug"
            ],
            "dependsOn": "CMake Configure",
            "problemMatcher": []
        },
        {
            "label": "Run Server",
            "type": "shell",
            "command": "${workspaceFolder}/build/bin/Debug/Server.exe",
            "dependsOn": "CMake Build",
            "problemMatcher": []
        },
        {
            "label": "Run Client",
            "type": "shell",
            "command": "${workspaceFolder}/build/bin/Debug/Client.exe",
            "dependsOn": "CMake Build",
            "problemMatcher": []
        }
    ]
}
